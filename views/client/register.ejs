<%- include('./layouts/head',
{title: 'Home Page'}
) %>
<%- include('./layouts/header',
) %>
<div class="register-area">
    <section class="banner-area">
        <div class="container">
            <div class="row">
                <div class="contact-form form-area">
                    <h2 class="panel-title">Register</h2>
                    <div class="">
                        <% if(hasErrors) { %>
                            <div class="alert alert-danger">
                                <% messages.forEach(function(message){ %>
                                    <span><%=  message %></span>
                                <% })%>
                            </div>
                        <% } %>
                        <form role="form" action="/user/register" method="post">
                            <input type="file" name="img" style="display: none">
                            <div class="left">
                                <input name="firstname" id="firstname" value="<%= dataForm.firstname %>" type="text" placeholder="First name"  required>
                            </div>
                            <div class="right">
                                <input type="text" name="lastname" id="lastname" value="<%= dataForm.lastname %>" class="" placeholder="Last Name">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="default-select" id="default-select">
                                        <select name="gender" value="<%= dataForm.gender %>" placeholder="gender">
                                            <option value="male">Male</option>
                                            <option value="famale">Female</option>
                                            <option value="other">Other</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="input-image">
                                        <label><i class="fa fa-image"></i> Input Image
                                            <input type="file" name="img" value="<%= dataForm.img %>" style="display: none">
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="left">
                                <input type="text" name="numbercmnd" value="<%= dataForm.numbercmnd %>"
                                       class="" placeholder="So cmnn">
                            </div>
                            <div class="right">
                                <input type="date" name="dob" value="<%= dataForm.dob %>" class="" placeholder="dob">
                            </div>
                            <input type="text" name="address" value="<%= dataForm.address %>"
                                   class="" placeholder="Address">
                            <input type="email" name="email" id="email" value="<%= dataForm.email %>" class="" placeholder="Email Address">
                            <div class="left">
                                <input type="password" name="password" id="password" class="" placeholder="Password">

                            </div>
                            <div class="right">
                                <input type="password" name="password_confirmation" id="password_confirmation" class="" placeholder="Confirm Password">
                            </div>
                            <button type="submit" class="template-btn">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<%- include('./layouts/footer',
) %>
